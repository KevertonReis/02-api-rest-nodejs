{
  "extends": ["plugin:prettier/recommended", "@rocketseat/eslint-config/node"],
  "rules": {
    "semi": ["error", "never"],
    "linebreak-style": ["error", "windows"], // ou 'windows' se necess√°rio
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "crlf",
        "singleQuote": true,
        "parser": "flow",
        "semi": false
      }
    ]
  }
}
